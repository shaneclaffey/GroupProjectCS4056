<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.shane.screenstest.VideoActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Songs"
            android:id="@+id/songsHeader"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/gridLayout"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="English"
            android:id="@+id/english_header"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Irish"
            android:id="@+id/textView4"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:id="@+id/colours_image_button"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/colours"
            android:layout_gravity="center_horizontal"
            android:background="@null"
            android:backgroundTint="#b988fc" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Colours Play"
            android:id="@+id/colours_button"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:layout_marginBottom="0dp"
            android:background="#b988fc"
            android:textColor="#f5f5f5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dathanna Play"
            android:id="@+id/colours_button_irish"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:background="#b988fc"
            android:textColor="#f5f5f5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/colour_stop"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_marginBottom="0dp"
            android:background="#b988fc"
            android:textColor="#f5f5f5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/irish_colours_stop"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_marginBottom="0dp"
            android:background="#b988fc"
            android:textColor="#f5f5f5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp" />

        <ImageView
            android:layout_width="97dp"
            android:layout_height="150dp"
            android:id="@+id/numbers_image_button"
            android:layout_row="5"
            android:layout_column="1"
            android:src="@drawable/numbers"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numbers"
            android:id="@+id/numbers_button"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="fill_horizontal"
            android:background="#b988fc"
            android:textColor="#FFF5F5F5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uimhereacha"
            android:id="@+id/numbers_button_irish"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_gravity="fill_horizontal"
            android:background="#b988fc"
            android:textColor="#FFF5F5F5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/numbers_stop"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_marginBottom="0dp"
            android:background="#b988fc"
            android:textColor="#f5f5f5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stop"
            android:id="@+id/irish_numbers_stop"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_marginBottom="0dp"
            android:background="#b988fc"
            android:textColor="#f5f5f5"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp" />

    </GridLayout>

</RelativeLayout>
